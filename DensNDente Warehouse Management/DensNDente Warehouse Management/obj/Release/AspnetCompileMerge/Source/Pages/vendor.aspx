<%@ Page Title="" Language="C#" MasterPageFile="~/Client.Master" AutoEventWireup="true" CodeBehind="vendor.aspx.cs" Inherits="DensNDente_Warehouse_Management.WebForm14" %>

<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <style type="text/css">
        .auto-style1 {
            width: 130px;
            text-align: right;
            padding-right: 10px;
            font-weight: bold;
        }
    </style>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">



    <div style="width: 100%; float: left">
        <div style="width: 50%; float: left">

            <table>
                <tr>
                    <td class="auto-style1"></td>
                    <td style="font-weight: bold; font-size: 26px; color: #ed4e6e">Add New Vendor</td>
                </tr>
                <tr>
                    <td class="auto-style1">Name:
                    </td>
                    <td>
                        <asp:TextBox ID="txtName" runat="server" Width="250" required></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="auto-style1">Address:</td>
                    <td>
                        <asp:TextBox ID="txtAddress" runat="server" Width="250" TextMode="MultiLine" required></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="auto-style1">Description</td>
                    <td>
                        <asp:TextBox ID="txtDescription" TextMode="MultiLine" runat="server" Width="250"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="auto-style1">Email:</td>
                    <td>
                        <asp:TextBox ID="txtEmail" runat="server" TextMode="Email" Width="250" required></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="auto-style1">Phone Number:</td>
                    <td>
                        <asp:TextBox MaxLength="10" pattern="[0-9]{10}" ID="txtPhoneNumber" runat="server" Width="250" required></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="auto-style1"></td>
                    <td>
                        <asp:Button ID="btnInsert" CssClass="button" runat="server" Text="Add New Vendor" OnClick="btnInsert_Click" />
                        <asp:Button ID="btnUpdate" runat="server" Text="Update Customer" CssClass="button" Visible="false" OnClick="btnUpdate_Click" />
                        <asp:HyperLink ID="linkBack" CssClass="button-cancel" runat="server" NavigateUrl="~/Pages/vendor.aspx" Visible="false">Cancel</asp:HyperLink>
                    </td>
                </tr>
            </table>
        </div>

    </div>

    <div style="width: 100%; float: left">
        <div class="gridHeaderStyle">
            View All Vendors
        </div>
        <div>
            <asp:GridView CssClass="ctable" Width="100%" ID="gridVendor" runat="server" AutoGenerateColumns="False" DataKeyNames="VendorId" AutoGenerateDeleteButton="True" OnRowDeleting="gridVendor_RowDeleting">
                <Columns>
                    <asp:TemplateField>
                        <ItemTemplate>
                            <a href="vendor.aspx?id=<%# Eval("VendorId") %>">Edit</a>
                        </ItemTemplate>
                    </asp:TemplateField>
                    <asp:BoundField DataField="VendorName" HeaderText="Name" SortExpression="Name" />
                    <asp:BoundField DataField="VendorAddress" HeaderText="Address" SortExpression="Address" />
                    <asp:BoundField DataField="VendorEmail" HeaderText="Email" SortExpression="Email" />
                    <asp:BoundField DataField="VendorPhone" HeaderText="Phone" SortExpression="Phone" />
                </Columns>
            </asp:GridView>
        </div>
    </div>


</asp:Content>
